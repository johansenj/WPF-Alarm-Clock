<UserControl x:Class="Alarm.DayToggleSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="40" Width="260">
    <Grid Margin="0,0,0,0">
        <ToggleButton x:Name="tbSun" Content="Sun" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="30" Height="20"/>
        <ToggleButton x:Name="tbMon" Content="Mon" HorizontalAlignment="Left" Margin="45,10,0,0" VerticalAlignment="Top" Width="30" Height="20"/>
        <ToggleButton x:Name="tbTue" Content="Tue" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" Width="30" Height="20"/>
        <ToggleButton x:Name="tbWed" Content="Wed" HorizontalAlignment="Left" Margin="115,10,0,0" VerticalAlignment="Top" Width="30" Height="20"/>
        <ToggleButton x:Name="tbThu" Content="Thu" HorizontalAlignment="Left" Margin="150,10,0,0" VerticalAlignment="Top" Width="30" Height="20"/>
        <ToggleButton x:Name="tbFri" Content="Fri" HorizontalAlignment="Left" Margin="185,10,0,0" VerticalAlignment="Top" Width="30" Height="20"/>
        <ToggleButton x:Name="tbSat" Content="Sat" HorizontalAlignment="Left" Margin="220,10,0,0" VerticalAlignment="Top" Width="30" Height="20"/>
    </Grid>
</UserControl>
